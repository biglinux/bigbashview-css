#!/bin/bash

# Function to start the HTML document
start() {
    cat << EOF
<section class="box mt-4 mb-4">
EOF
}

# Function to end the HTML document
end() {
    cat << EOF
</section>
EOF
}

text() {
if [ -n "$fontSize" ];then
    size=$fontSize
else
    size=h1
fi
cat << EOF
<${size} class="mb-2 mt-3 mx-5">$text</$size>
EOF
}


# Function to display usage message
usage() {
    echo "Usage: ${0##*/} [options]"
    echo '    start                 section start'
    echo '    end                   section end'
    echo '    -text <text>          text to the section'
    echo '    -fontSize <number>    value: 1~6'
    echo ''
    exit "$1"
}

# Loop to process command-line arguments
while (( "$#" )); do
    case "$1" in
        -s|start)
            start_called=true
            ;;
        end)
            end_called=true
            ;;
        -text)
            shift
            text="$1"
            text_called=true
            ;;
        -fontSize)
            shift
            fontSize="H$1"
            ;;
        *)
            usage 1
            ;;
    esac
    shift
done

# Check if start function should be called
if [ "$start_called" = "true" ]; then
    start
# Check if end function should be called
elif [ "$end_called" = "true" ]; then
    end
fi
if [ "$text_called" = "true" ]; then
    text
fi


